<div ng-controller="UserCtrl">

	<div ng-if="users == 0">
		<h2>Nenhum usuário cadastrado :(</h2>
	</div>

	<div ng-if="users != 0">
		<h2>Lista de usuários</h2>

		<form class="form-inline" role="form" id="form-search">
		  <div class="form-group">
		    <input type="text" class="form-control" id="inputSuccess4" placeholder="Pesquisar usuário" ng-model="search.nome">
		    <span class="glyphicon glyphicon-search"></span>
		  </div>
		</form>

		<table class="table">
        <thead>
          <tr>
            <th>Matrícula</th>
            <th>Nome</th>
            <th>Data de nascimento</th>
            <th>Email</th>
            <th>Senha</th>
            <th>Editar</th>
            <th>Remover</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="user in users | filter:search">
            <td>{{user.id}}</td>
            <td>{{user.nome}}</td>
            <td>{{user.nascimento | date:'dd-MM-yyyy'}}</td>
            <td>{{user.email}}</td>
            <td>{{user.senha}}</td>
            <td>
            	<div class="btn-group">
				  <button type="button" class="btn btn-warning" ng-click="modalEdit(user.id, $index)"> <span class="glyphicon glyphicon-pencil"></span></button>
				</div>
            </td>
            <td>
            	<div class="btn-group">
				  <button type="button" class="btn btn-danger" ng-click="removeUser(user.id, $index)"> <span class="glyphicon glyphicon-trash"></span></button>
				</div>
            </td>
          </tr>
        </tbody>
      </table>
	</div>

	<div class="btn-group" id="bt">
	  <button type="button" class="btn btn-primary" ng-click="openModal()"> <span class="glyphicon glyphicon-user"></span> Cadastrar usuário</button>
	</div>

<!-- MODAL CADASTRAR -->

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Cadastrar novo usuário</h4>
      </div>
      <div class="modal-body">
        <form role="form">
		  <div class="form-group">
		    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Nome completo" ng-model="user.nome">
		  </div>
		  <div class="form-group">
		    <input type="email" class="form-control" id="exampleInputPassword1" placeholder="E-mail" ng-model="user.email">
		  </div>
		  <div class="form-group">
		    <input type="date" class="form-control" id="exampleInputPassword1" placeholder="Data de Nascimento" ng-model="user.nascimento">
		  </div>
		  <div class="form-group">
		    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Senha" ng-model="user.senha">
		  </div>
		</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Fechar</button>
        <button type="button" class="btn btn-primary" ng-click="registerUser()"><span class="glyphicon glyphicon-plus"></span> Cadastrar</button>
      </div>
    </div>
  </div>
</div>

<!-- MODAL EDITAR -->

<div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Editar usuário</h4>
      </div>
      <div class="modal-body">
        <form role="form">
		  <div class="form-group">
		  <input type="hidden" class="form-control" id="exampleInputEmail1" ng-model="user.idt">
		    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Nome completo" ng-model="user.nome">
		  </div>
		  <div class="form-group">
		    <input type="email" class="form-control" id="exampleInputPassword1" placeholder="E-mail" ng-model="user.email">
		  </div>
		  <div class="form-group">
		    <input type="date" class="form-control" id="exampleInputPassword1" placeholder="Data de Nascimento" ng-model="user.nascimento">
		  </div>
		  <div class="form-group">
		    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Nova senha" ng-model="user.senha">
		  </div>
		</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Fechar</button>
        <button type="button" class="btn btn-primary" ng-click="editUser()"> Editar</button>
      </div>
    </div>
  </div>
</div>

